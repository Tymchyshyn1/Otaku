<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomNavigationTheme">
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_tint</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white_tint</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="text_style_bold">
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_style_light">
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_title_details">
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style_title_items">
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style_values">
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style_main_title">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_russian_title">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycler_style">
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="text_expandable_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:maxLines">50</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="item_card_style">
        <item name="android:layout_marginVertical" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="item_title_text_style">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_description_text_style">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="avatar_roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <style name="avatar_large_roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">150dp</item>
    </style>

    <style name="avatar_mini_roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="avatar_history_roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="favoritesImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>


    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="OtakuMaterialTheme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:colorPrimaryDark">@color/activity_background_color</item>
        <item name="android:windowLightStatusBar">@bool/isLightTheme</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="DialogTheme_transparent" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_style</item>
        <!--You can set other style items also, such as animations and etc-->
    </style>

    <style name="tab_text_style">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/open_sans_medium</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <style name="SpinnerStyle">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="SignOut" parent="Widget.Material3.Button.ElevatedButton.Icon"/>

</resources>