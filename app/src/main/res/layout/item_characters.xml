<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_characters_root_layout_width"
    android:layout_height="@dimen/item_characters_root_layout_height">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImageCharactersItem"
        style="@style/item_card_style"
        android:layout_width="@dimen/item_characters_cvImageCharactersItem_layout_width"
        android:layout_height="@dimen/item_characters_cvImageCharactersItem_layout_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivImageCharactersItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/item_characters_ivImageCharactersItem_contentDescription"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitleCharactersItem"
        style="@style/item_title_text_style"
        app:layout_constraintEnd_toEndOf="@+id/cvImageCharactersItem"
        app:layout_constraintStart_toStartOf="@+id/cvImageCharactersItem"
        app:layout_constraintTop_toBottomOf="@+id/cvImageCharactersItem" />

</androidx.constraintlayout.widget.ConstraintLayout>