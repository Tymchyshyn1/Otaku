<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/activity_background_color">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:shapeAppearanceOverlay="@style/favoritesImageView"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/nicknameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/nicknameTextView"
        style="@style/text_style_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Nickname"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/avatarImageView"
        app:layout_constraintStart_toStartOf="@id/avatarImageView"
        app:layout_constraintTop_toBottomOf="@id/avatarImageView" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/text_style_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Full Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/nicknameTextView"
        app:layout_constraintStart_toStartOf="@id/nicknameTextView"
        app:layout_constraintTop_toBottomOf="@id/nicknameTextView" />



</androidx.constraintlayout.widget.ConstraintLayout>
