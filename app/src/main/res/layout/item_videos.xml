<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_videos_root_layout_width"
    android:layout_height="@dimen/item_videos_root_layout_height">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImageVideosItem"
        style="@style/item_card_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_videos_cvImageVideosItem_layout_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivImageVideosItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/item_videos_ivImageVideoItem_contentDescription"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitleVideosItem"
        style="@style/item_title_text_style"
        android:textSize="@dimen/item_videos_tvTitleVideosItem_textSize"
        app:layout_constraintEnd_toEndOf="@+id/cvImageVideosItem"
        app:layout_constraintStart_toStartOf="@+id/cvImageVideosItem"
        app:layout_constraintTop_toBottomOf="@+id/cvImageVideosItem" />

    <TextView
        android:id="@+id/tvHostingVideosItem"
        style="@style/item_description_text_style"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleVideosItem"
        app:layout_constraintStart_toStartOf="@+id/tvTitleVideosItem"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleVideosItem" />

</androidx.constraintlayout.widget.ConstraintLayout>